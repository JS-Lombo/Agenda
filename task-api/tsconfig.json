{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs", // Cambiado a commonjs para compatibilidad con TypeORM
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true, // Cambiado a false, ya que TypeORM requiere metadatos
    "experimentalDecorators": true, // Habilitado para decoradores
    "emitDecoratorMetadata": true, // Habilitado para metadatos de decoradores
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
