{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs", // Cambiado a commonjs para compatibilidad con TypeORM
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false, // Cambiado a false, ya que TypeORM requiere metadatos
    "experimentalDecorators": true, // Habilitado para decoradores
    "emitDecoratorMetadata": true, // Habilitado para metadatos de decoradores
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
